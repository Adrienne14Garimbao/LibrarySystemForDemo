@*
    For Book Categories > Index
*@

@using LibrarySystemForDemo.Web.Models.Categories
@using LibrarySystemForDemo.Web.Startup

@model CategoryListViewModel;


@{
    ViewBag.Title = L("BookCategories");
    ViewBag.CurrentPageName = PageNames.BookCategories;
}

@section scripts
    {
    <environment names="Development">
        <script src="~/view-resources/Views/Category/Index.js " true"></script>
    </environment>
}
<section class="content-header">

    <div class="container-fluid">

        <h1>@L("Category")</h1>

        <a class="btn bg-blue float-sm-right" asp-controller="Category" asp-action="CreateOrEdit">
            <i class="fa fa-plus-square"></i>
            @L("CreateCategory")
        </a>

        <div class="col-sm-6">

            <form id="categorySearchForm" class="form-horizontal" asp-controller="Category" asp-action="Index">

                <div class="input-group">
                    <div class="input-group-prepend">

                        <button type="submit" class="btn btn-success btn-search">
                            <i class="fas fa-search"></i> @L("Search")
                        </button>

                    </div>
                    <input type="text" name="searchCategory" class="form-control txt-search">

                </div>
            </form>

        </div>

</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">

                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="CategoryTable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>@L("CategoryId")</th>
                                        <th>@L("CategoryName")</th>
                                        <th>@L("DepartmentName")</th>
                                        <th style="width: 150px">@L("Actions")</th>
                                    </tr>
                                </thead>
                                <tbody>


                                    @foreach (var category in Model.Categories)
                                    {
                                        <tr>
                                            <td>@category?.Id</td>
                                            <td>@category?.CategoryName</td>
                                            <td>@category.DepartmentName?.Name</td>

                                            <td>
                                                <button type="button" class="btn btn-sn bg-secondary edit-category" data-category-id="@category.Id">
                                                    <i class="fas fa-pencil-alt"></i> Edit
                                                </button>

                                                <button type="button" class="btn btn-sn btn-danger delete-category" data-category-id="@category.Id" data-category-name="@category.CategoryName">
                                                    <i class="fas fa-trash"></i> Delete
                                                </button>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


