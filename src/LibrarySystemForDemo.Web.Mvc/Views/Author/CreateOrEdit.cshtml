@*
    For Authors > Create or Edit
*@
@using LibrarySystemForDemo.Web.Models.Authors;
@model CreateOrEditAuthorListViewModel;


@section scripts
    {
    <environment names="Development">
        <script src="~/view-resources/Views/Author/CreateOrEdit.js" asp-append-version="true"></script>
    </environment>
}


<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">

                    <div class="card-body">

                        <form name="AuthorForm" role="form" class="form-horizontal">

                            <input type="hidden" name="Id" value="@Model?.Id" />

                            <div class="row">

                                <div class="form-group">
                                    <label for="authorName">@L("AuthorsName")</label>
                                    <input type="text" class="form-control" id="authorName" name="AuthorsName" value="@Model?.AuthorsName" required placeholder="Enter Authors Name">
                                </div>

                            </div>

                            <div class="row">

                                <button type="button" class="btn btn-default cancel-button">@L("Cancel")</button>
                                <button type="submit" class="btn btn-primary save-button">@L("Save")</button>

                            </div>

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>