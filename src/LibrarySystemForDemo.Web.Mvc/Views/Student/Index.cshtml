@*
    For Students > Index
*@
@using LibrarySystemForDemo.Web.Models.Students
@using LibrarySystemForDemo.Web.Startup


@model StudentListViewModel

@{
    ViewBag.Title = L("Students");
    ViewBag.CurrentPageName = PageNames.Students;
}
@section scripts
    {
    <environment names="Development">
        <script src="~/view-resources/Views/Student/Index.js" asp-append-version="true"></script>
    </environment>
}
<section class="content-header">

    <div class="container-fluid">

        <h1>@L("Students")</h1>

        <a class="btn bg-blue float-sm-right" asp-controller="Student" asp-action="CreateOrEdit">
            <i class="fa fa-plus-square"></i>
            @L("CreateStudents")
        </a>

        <div class="col-sm-6">

            <form id="studentSearchForm" class="form-horizontal">

                <div class="input-group">
                    <div class="input-group-prepend">

                        <button type="submit" class="btn btn-success btn-search">
                            <i class="fas fa-search"></i> @L("Search")
                        </button>

                    </div>
                    <input type="text" name="searchStudents" class="form-control txt-search">

                </div>
            </form>

        </div>

    </div>


</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">

                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="StudentsTable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>@L("StudentId")</th>
                                        <th>@L("StudentName")</th>
                                        <th>@L("StudentContactNumber")</th>
                                        <th>@L("StudentEmail")</th>
                                        <th>@L("Departments")</th>

                                        <th style="width: 150px">@L("Actions")</th>
                                    </tr>
                                </thead>
                                <tbody>


                                    @foreach (var student in Model.Students)
                                    {
                                        <tr>
                                            <td>@student?.Id</td>
                                            <td>@student?.StudentName</td>
                                            <td>@student?.StudentContactNumber</td>
                                            <td>@student?.StudentEmail</td>
                                            <td>@student.Department?.Name</td>


                                            <td>
                                                <button type="button" class="btn btn-sn bg-secondary edit-student" data-student-id="@student.Id">
                                                    <i class="fas fa-pencil-alt"></i> Edit
                                                </button>

                                                <button type="button" class="btn btn-sn btn-danger delete-student" data-student-id="@student.Id" data-student-name="@student.StudentName">
                                                    <i class="fas fa-trash"></i> Delete
                                                </button>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
